            <div class="form-group">
                <label asp-for="Term.Title" class="control-label"></label>
                <input asp-for="Term.Title" class="form-control" />
                <span asp-validation-for="Term.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Name" class="control-label"></label>
                <input asp-for="Term.Name" class="form-control" />
                <span asp-validation-for="Term.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Version" class="control-label"></label>
                <input asp-for="Term.Version" class="form-control" />
                <span asp-validation-for="Term.Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Description" class="control-label"></label>
                <input asp-for="Term.Description" class="form-control" />
                <span asp-validation-for="Term.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Purpose" class="control-label"></label>
                <input asp-for="Term.Purpose" class="form-control" />
                <span asp-validation-for="Term.Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Synonym" class="control-label"></label>
                <input asp-for="Term.Synonym" class="form-control" />
                <span asp-validation-for="Term.Synonym" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
